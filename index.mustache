<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>iBoard</title>
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/libs/materialize-css/dist/css/materialize.min.css">
</head>
<body>
<!-- Navbar -->
<nav>
  <div class="nav-wrapper deep-orange">
    <ul class="left">
      <li data-activates="slide-out" class="button-collapse"><a href="#"><i class="material-icons">menu</i></a></li>
    </ul>
    <a href="#!" class="brand-logo center">iBoard</a>
  </div>
</nav>

<!-- Side nav -->
<ul id="slide-out" class="side-nav">
  <li>
    <div class="user-view deep-orange">
      <h3 class="white-text">Tools</h3>
    </div>
  </li>
  <li><a class="subheader">Tool</a></li>
  <li><a class="waves-effect" href="#!">Stencil</a></li>
  <li><a class="waves-effect" href="#!">Eraser</a></li>
  <li><a class="subheader">Settings</a></li>
  <li>
    <p class="range-field">
      <input id="pencil-size" type="range" id="test5" min="0" max="100"/>
    </p>
  </li>
  <li>
    <input id="pencil-color" type="color">
  </li>
  <li>
    <div class="input-field col s12">
      <select>
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Option 1</option>
        <option value="2">Option 2</option>
        <option value="3">Option 3</option>
      </select>
      <label>Materialize Select</label>
    </div>
  </li>
</ul>

<!-- Canvas -->
<canvas id="board" width="800" height="480"></canvas>

<!-- Libs scripts -->
<script src="/libs/fabric/dist/fabric.js" type="text/javascript"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/libs/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="/libs/materialize-css/dist/js/materialize.min.js" type="text/javascript"></script>

<!-- My scripts -->
<script src="index.js" type="text/javascript"></script>
</body>
</html>

